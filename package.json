{
  "name": "chat-example",
  "version": "1.0.0",
  "description": "A chat example to showcase how to use `socket.io` with a static `express` server with `async` for control flow.",
  "main": "server.js",
  "repository": "",
  "author": "Mostafa Eweda <mo.eweda@gmail.com>",
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm start --prefix client",
    "database": "phpmyadmin-ctl install",
    "dev": "concurrently \"npm run database\" \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "async": "~0.2.8",
    "body-parser": "^1.18.2",
    "concurrently": "^3.5.1",
    "cors": "^2.8.4",
    "express": "^3.21.2",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "mongoose": "^5.0.8",
    "mysql": "^2.15.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "socket.io": "~0.9.14"
  }
}
